<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="MapsterGUI.MainWindow"
        Width="800"
        Height="480"
        Title="MapsterGUI">
    <Grid Margin="5" ColumnDefinitions="*" RowDefinitions="Auto,*">
        <Button Grid.Row="0" HorizontalAlignment="Right" Click="OnButtonPressed" Content="{Binding Model.Data}" />
        <DataGrid Grid.Row="1" Items="{Binding Items}" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item Header" Binding="{Binding Data}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
